{
  "name": "banter-bus-core-api",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "start": "ts-node src/index.ts",
    "test": "jest",
    "coverage": "jest --config --collectCoverage --coverageDirectory=\"./coverage\" --ci --reporters=default --reporters=jest-junit",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "lint:fix": "eslint --fix './src/**/*.{js,ts}'",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\"",
    "types:check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.1.0",
    "convict": "^6.2.1",
    "convict-format-with-validator": "^6.2.0",
    "http-status-codes": "^2.1.4",
    "inversify": "^6.0.1",
    "js-yaml": "^4.1.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.0.11",
    "node-fetch": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "rxjs-compat": "^6.6.7",
    "socket.io": "^4.3.0",
    "socket.io-client": "^4.3.2",
    "ts-convict": "^1.1.0",
    "tslog": "^3.2.2",
    "uuid": "^8.3.2",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "@trivago/prettier-plugin-sort-imports": "^2.0.4",
    "@types/axios": "^0.14.0",
    "@types/bunyan": "^1.8.7",
    "@types/convict": "^6.1.1",
    "@types/convict-format-with-validator": "^6.0.2",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.2",
    "@types/js-yaml": "^4.0.3",
    "@types/node": "^16.11.0",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-jest": "^27.3.1",
    "db-migrate": "^1.0.0-beta.16",
    "db-migrate-mongodb": "^1.5.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "faker": "^5.5.3",
    "fishery": "^2.0.0",
    "husky": "^7.0.0",
    "jest": "^27.2.4",
    "jest-junit": "^13.0.0",
    "lint-staged": "^11.0.1",
    "mongodb-memory-server": "^7.4.4",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "socket.io-mock": "^1.3.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "_moduleAliases": {
    "~": "dist/src"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.4"
    }
  }
}
