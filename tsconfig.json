{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/core/config/types.d.ts", "src/types.d.ts", "tests/types/**.d.ts", "tests/room.test.ts"],
  "exclude": ["node_modules/", "src/clients/**/*"]
}
